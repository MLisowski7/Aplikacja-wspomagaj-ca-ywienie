  <div class="container my-5">
    <div class="row px-3">
  <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0 ">
        <div class="img-left d-none d-md-flex"></div>

        <div class="card-body">
          <h4 class="title text-center mt-4">
            Zaloguj się do swojego konta
          </h4>
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form id="account" method="post" class="form-box px-3">

            <div class="form-input">
              <input asp-for="Input.Email" placeholder="E-mail" class="form-control" autocomplete="username" />
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                                         
            <div class="form-input">
              <input asp-for="Input.Password" placeholder="Hasło" class="form-control" autocomplete="current-password"/>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
              <div class="custom-control custom-checkbox">
                <label asp-for="Input.RememberMe" class="custom-control-label" for="cb1">
                   <input type="checkbox" class="custom-control-input" id="cb1" name="" asp-for="Input.RememberMe" />
                    Zapamiętaj mnie
                </label>
              </div>
            </div>                                     

            <div class="text-center mb-3">
              <button id="login-submit" type="submit" class="btn btn-block text-uppercase pe-5 ps-5">
                Zaloguj
              </button>
            </div>

          <!--  
              <div class="text-center">
