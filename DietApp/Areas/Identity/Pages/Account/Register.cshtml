<div class="container my-5">
    <div class="row px-3">
        <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0 ">
            <div class="img-left d-none d-md-flex"></div>

            <div class="card-body">                                    
                <h4 class="title text-center mt-4">
                    Stwórz swoje konto <br />
                    podaj nastepujące dane:
                </h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-box px-3">

                    <div class="form-input">
                        <input asp-for="Input.Email" placeholder="E-mail" class="form-control" autocomplete="username" aria-required="true" />                       
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>                                                                         
                  
                    <div class="form-input">
                        <input asp-for="Input.Password" placeholder="Hasło" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                                               
                    <div class="form-input">
                        <input asp-for="Input.ConfirmPassword" placeholder="Potwierdź hasło" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3">
                        <button id="login-submit" type="submit" class="btn btn-block text-uppercase pe-5 ps-5">
                            Zartejestruj się
                        </button>
                    </div>
                    <hr />
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
