@model DietApp.Models.Meal

@{
    ViewData["Title"] = "AddMeal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-5">Dodaj swój posiłek</h2>

<hr />

<div class="col-md-10 mx-auto col-lg-5 mb-5">
    <form asp-action="AddMeal" method="post" enctype="multipart/form-data" class=" p-4 p-md-5 border rounded-3 bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="UserId" type="hidden" class="form-control" value="@ViewBag.UserId" />
        <input asp-for="DailyConsumptionId" type="hidden" class="form-control" value="@ViewBag.DailyConsumptionId" />

          <div class="form-group mb-3">     
            <label asp-for="ProductId" class="control-label" ></label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products"></select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
          </div>

          <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label"></label>
          <div class="input-group">
                <input asp-for="Weight" type="number" class="form-control" />
                <span class="input-group-text"> g </span>
          </div>
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>         
            <span asp-validation-for="UserId" class="text-danger"></span>
            <span asp-validation-for="DailyConsumptionId" class="text-danger"></span>
            <span asp-validation-for="MealId" class="text-danger"></span>

            <div class="form-group mt-2">
                <input type="submit" value="Dodaj posiłek do dziennika" class="w-100 btn btn-lg btn-success" />
            </div>
            <div class="form-group mt-2">
                <a asp-controller="Products" asp-action="Create" class="w-100 btn btn-lg btn-secondary">Nie ma twojego posiułku? Dodaj go!</a>
            </div>
          <hr class="my-4">
            <div class="mt-2">
                <a asp-action="DailyConsumptionList" type="submit" class="w-100 btn btn-secondary">Wróć do swojego dziennika</a>
             </div>
        </form>
      </div>